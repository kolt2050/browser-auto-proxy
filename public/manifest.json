{
    "manifest_version": 3,
    "name": "Auto Proxy",
    "version": "1.0.0",
    "description": "Auto proxy for sites",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
        "proxy",
        "storage",
        "webRequest",
        "webRequestAuthProvider",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}